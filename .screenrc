# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on

# hardstatus on
# hardstatus alwayslastline
# hardstatus string '%{= Kd} %-= %{= Kd}%-w%{= Kr}[%{= Kd}%n %t%{= Kr}]%{= Kd}%+w'
# startup_message off

termcapinfo xterm* ti@:te@ # mouse support
